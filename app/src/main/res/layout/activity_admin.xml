<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5CEB3"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".AdminActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="190dp"
        android:layout_marginTop="-90dp"
        app:srcCompat="@mipmap/ic_venus"
        android:contentDescription="TODO" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonOperator"
            android:layout_width="145dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:layout_weight="0"
            android:background="@drawable/btns_round_bg"
            android:drawableStart="@drawable/operator_vec"
            android:elevation="20dp"
            android:text="Operadores"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textStyle="bold|italic" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonBook"
            android:layout_width="145dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:layout_weight="0"
            android:background="@drawable/btns_round_bg"
            android:drawableStart="@drawable/books_vc"
            android:text="Livros"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonLogout"
            android:layout_width="145dp"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:background="@drawable/btns_round_bg"
            android:drawableStart="@drawable/logout_vc"
            android:text="Logout"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textStyle="bold|italic" />
    </LinearLayout>

</LinearLayout>